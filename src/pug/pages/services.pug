extends ../sample.pug
include ../mixins/plan.pug
include ../mixins/stages.pug

block content
    include ../data/servicesData
    section#service-page
        .service-page__bg  
        .container
            nav.bread-crumbs(aria-label='breadcrumb')
                ol.breadcrumb
                    li.breadcrumb-item
                        a(href='./') Главный  
                    li.breadcrumb-item
                        a(href='./services.html') Услуги
                    li.breadcrumb-item.active(aria-current='page') Разрабатываем маркетинг-план: дорожная карта достижения целей
            .service-page__inner
                img.bg-pol(src="../../assets/img/Polygon 2.png", alt="gb")
                h2.services-page__title Разрабатываем маркетинг-план: дорожная карта достижения целей
                .col-md-7.col-12
                    each val in servicePlan
                        +plan(val)
            .service__description
                h2.title.col-12 Описание услуги
                .description__text 
                    each val in description 
                        p #{val}
                .service__stages 
                    .title Основные этапы разработки - 
                        a(href="#")  маркетинг плана:
                    ul.stages__item
                        each val in serviceStage
                            +stage(val)
            include ../includes/consultationForm